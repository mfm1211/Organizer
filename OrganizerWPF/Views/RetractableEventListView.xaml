        <TextBlock  Grid.Row="2" Text="No events to show" Margin="40" Foreground="Gray" >

            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=MyItems, Path=Items.Count}" Value="0">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>

        </TextBlock>

        <DockPanel Grid.Row="2"  Height="220" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                <ItemsControl x:Name="MyItems" ItemsSource="{Binding DisplayedListOfItems}"  >
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:Name="DataDockPanel">
                            <StackPanel >

                                <Line  Stroke="LightGray"  StrokeThickness="1" X1="0" X2="460" Y1="5" Y2="5" VerticalAlignment="Top" />

                                <TextBlock 
                                    VerticalAlignment="Top" HorizontalAlignment="Left"
                                    Text="{Binding StringStartEndTime}" FontFamily="Calibri" FontSize="11"
                                    Margin="10,0,0,0"/>

                                <Grid Margin ="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse HorizontalAlignment="Left"  VerticalAlignment="Center"
                                             Fill="#FFFFFF00"
                                             Height="8"
                                             Width="8"
                                             StrokeThickness="5"
                                             Stroke="{Binding FontColor}"
                                             Margin="10,5,5,5"/>
                                    <Border BorderBrush="{x:Null}" MinHeight="20"  Grid.Column="1">
                                        <TextBlock Text="{Binding Text}" Style="{StaticResource unscratchedChecklistTextbBlock}"/>
                                    </Border>
                                    <!--<userControls:ContextMenuButtonUC  Grid.Column="2" 
                                                                       HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                       Entries= "{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path = DataContext.ListofItemMenuOptions}"
                                                                       MenuPanelClick = "{Binding RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}, Path = DataContext.MenuItemCommand}"                                 
                                                                       MenuOpenParameter="{Binding EventObj}"/>-->


                                        <controls:ContextMenuButton Grid.Column="2" 
                                                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                                                     Tag="{Binding DataContext,  RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}">
                                            <controls:ContextMenuButton.ContextMenu111>
                                                <ContextMenu DataContext="{Binding Path=PlacementTarget, RelativeSource={RelativeSource Self}}">
                                                    <MenuItem Header="Delete" 
                                                              Command="{Binding DataContext.DeleteItemCommand}"   
                                                              CommandParameter="{Binding EventObj}"/>
                                                    <MenuItem Header="Edit"/>
                                                </ContextMenu>
                                            </controls:ContextMenuButton.ContextMenu111>

                                        </controls:ContextMenuButton>

                                        <!--<Button x:Name="ItemOptionsButton" 
                                                Grid.Column="2" 
                                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                                Height="23" Width="12"
                                                ContextMenuService.Placement="Left"
                                                 Tag="{Binding DataContext, 
                RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" 
                                                  >

                                            <Button.Style>
                                                <Style TargetType="{x:Type Button}">
                                                    <Style.Triggers>
                                                        <EventTrigger RoutedEvent="Click">
                                                            <EventTrigger.Actions>
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="ContextMenu.IsOpen">
                                                                            <DiscreteBooleanKeyFrame KeyTime="0:0:0" Value="True"/>
                                                                        </BooleanAnimationUsingKeyFrames>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger.Actions>
                                                        </EventTrigger>
                                                    </Style.Triggers>
                                                    
                                                </Style>
                                            </Button.Style>

                                            <Button.ContextMenu >
                                                <ContextMenu DataContext="{Binding Path=PlacementTarget, RelativeSource={RelativeSource Self}}">
                                                    <MenuItem Header="Delete" 
                                                               Command="{Binding DataContext.DeleteItemCommand}"   
                                                              CommandParameter="{Binding EventObj}"/>
                                                    <MenuItem Header="Edit"/>
                                                </ContextMenu>
                                            </Button.ContextMenu>

                                            
                                            

                                            <Image x:Name="buttonArrowImage" 
                   Style="{StaticResource threeDotsImageStyle}"/>


                                        </Button>-->

                                    </Grid>




                            </StackPanel>


                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                    <Button Height="20" Width="20" 
                            VerticalAlignment="Top" HorizontalAlignment="Left" 
                            Command="{Binding ShowAddItemPanelCommand}">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=MyItems, 
                                        Path=Items.Count, 
                                        Converter={StaticResource smallerThanToBoolConverter},
                                        ConverterParameter=5}" 
                                                 Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                </StackPanel>
            </ScrollViewer>
        </DockPanel>




        <Grid  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" Grid.RowSpan="10" 
               Visibility="{Binding Path=AddItemPanelVisibility, Converter={StaticResource boolToVisibilityConverter}}">


            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.25"/>
            </Grid.Background>

            <!--<Polygon Fill="Black" Opacity="0.25">
                <Polygon.Points> <Point X="0" Y="0" />  <Point X="0" Y="320" />  <Point X="510" Y="320" />
                    <Point X="510" Y="20" /> <Point X="490" Y="20" />  <Point X="490" Y="0" />            
                </Polygon.Points> </Polygon>-->



            <ContentControl Content="{Binding AddEventPanel}" 
                            Visibility="{Binding AddEventPanelVisibility, Converter={StaticResource boolToVisibilityConverter}}"
                        Grid.Row="1">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:AddBaseListItemPanelViewModel}">
                        <local:AddBaseListItemPanelView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>


    </Grid>
</UserControl>
